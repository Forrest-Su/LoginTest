<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LoginActivity"
    android:background="@color/white_eff0f4"
    android:fitsSystemWindows="true" >

    <ImageView
        android:id="@+id/iv_title"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/title_bg" />

    <Button
        android:id="@+id/button_close"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:background="#00000000"
        android:text="@string/button_close"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/iv_title"
        app:layout_constraintTop_toTopOf="@+id/iv_title" />

    <TextView
        android:id="@+id/tv_"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:background="#00000000"
        android:gravity="center"
        android:text="@string/tv_login"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        app:layout_constraintEnd_toStartOf="@+id/button_register"
        app:layout_constraintStart_toEndOf="@+id/button_close"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_register"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:background="#00000000"
        android:text="@string/button_register_1"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_title" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="30dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="20dp" />

    <ImageView
        android:id="@+id/iv_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginTop="6dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_title"
        app:srcCompat="@drawable/phone_number_bg" />

    <ImageView
        android:id="@+id/iv_password"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginTop="6dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_phone_number"
        app:srcCompat="@drawable/password_bg" />

    <Button
        android:id="@+id/button_login"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_register"
        android:gravity="center"
        android:text="@string/button_login"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cb_rememberPass" />

    <ImageView
        android:id="@+id/iv_phone_ico"
        android:layout_width="20dp"
        android:layout_height="26dp"
        android:layout_marginTop="17dp"
        android:scaleType="fitStart"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/iv_phone_number"
        app:srcCompat="@drawable/phone" />

    <ImageView
        android:id="@+id/iv_line_1"
        android:layout_width="10dp"
        android:layout_height="34dp"
        android:layout_marginStart="71dp"
        android:layout_marginTop="14dp"
        app:layout_constraintStart_toStartOf="@+id/iv_phone_number"
        app:layout_constraintTop_toTopOf="@+id/iv_phone_number"
        app:srcCompat="@drawable/line_1" />

    <ImageView
        android:id="@+id/iv_password_ico"
        android:layout_width="20dp"
        android:layout_height="26dp"
        android:layout_marginTop="17dp"
        android:scaleType="fitStart"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/iv_password"
        app:srcCompat="@drawable/locked" />

    <ImageView
        android:id="@+id/iv_line_2"
        android:layout_width="10dp"
        android:layout_height="32dp"
        android:layout_marginStart="71dp"
        android:layout_marginTop="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_password"
        app:srcCompat="@drawable/line_2" />

    <EditText
        android:id="@+id/et_phone_number"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:background="#00000000"
        android:ems="11"
        android:hint="@string/et_phone_hint"
        android:inputType="phone"
        app:layout_constraintEnd_toStartOf="@+id/iv_clear_phonenumber"
        app:layout_constraintStart_toEndOf="@+id/iv_line_1"
        app:layout_constraintTop_toTopOf="@+id/iv_phone_number" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:background="#00000000"
        android:ems="13"
        android:hint="@string/et_password_hint"
        android:inputType="textPassword"
        app:layout_constraintEnd_toStartOf="@+id/iv_clear_password"
        app:layout_constraintStart_toEndOf="@+id/iv_line_2"
        app:layout_constraintTop_toTopOf="@+id/iv_password" />

    <CheckBox
        android:id="@+id/cb_rememberPass"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:text="@string/eb_rememberPassword"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_password" />

    <Button
        android:id="@+id/button_resetPass"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:background="#00000000"
        android:text="忘记密码"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_password" />

    <ImageView
        android:id="@+id/iv_clear_phonenumber"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_phone_number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_phone_number"
        app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />

    <ImageView
        android:id="@+id/iv_clear_password"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_password"
        app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />

</android.support.constraint.ConstraintLayout>