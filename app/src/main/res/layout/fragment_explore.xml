<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_ffffff">

    <View
        android:id="@+id/view_top_me"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:background="@color/blue_5fc0cd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_findWorker"
        android:layout_width="60dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/view_top_me"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toTopOf="@+id/view_top_me"
        app:srcCompat="@drawable/find_white" />

    <TextView
        android:id="@+id/tv_findWorker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/find_worker"
        android:textColor="@color/blue_51A8B4"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_findWorker"
        app:layout_constraintEnd_toStartOf="@+id/iv_findEmployer"
        app:layout_constraintStart_toStartOf="@+id/iv_findWorker"
        app:layout_constraintTop_toTopOf="@+id/iv_findWorker" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <ImageView
        android:id="@+id/iv_findEmployer"
        android:layout_width="60dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_findWorker"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toTopOf="@+id/iv_findWorker"
        app:srcCompat="@drawable/find_blue" />

    <TextView
        android:id="@+id/tv_findEmployer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/find_employer"
        android:textColor="@color/white_ffffff"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_findEmployer"
        app:layout_constraintEnd_toEndOf="@+id/iv_findEmployer"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toTopOf="@+id/iv_findEmployer" />

    <ImageView
        android:id="@+id/iv_map_ico"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/view_top_me"
        app:layout_constraintEnd_toEndOf="@+id/view_top_me"
        app:layout_constraintTop_toTopOf="@+id/view_top_me"
        app:srcCompat="@drawable/room_outlined" />

    <FrameLayout
        android:id="@+id/showfragment_explore"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_top_me">

    </FrameLayout>

</android.support.constraint.ConstraintLayout>